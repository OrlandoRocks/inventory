        .box-body

          .nav-tabs-custom
            ul.nav.nav-tabs
              li.active
                a [href="#edit" data-toggle="tab"]
                  = "Inventario"
              li
                a [href="#password" data-toggle="tab"]
                  = "Vendedores"
            .tab-content
              #edit.tab-pane.active
                .dataTables_wrapper
                  .row
                    .col-sm-12
                      .table-responsive
                        table.table.table-bordered.table-hover.dataTable
                          thead
                            tr
                              th
                                = "# Serial"
                              th
                                = "Modelo"
                              th
                                = 'Descripcion'
                              th
                                = "Sucursal"
                              th.actions_header
                                = t('.actions')
                                tbody
                                  - @items.each do |item|
                                    tr.show_actions
                                      td = item.serial_number
                                      td = item.try(:model)
                                      td = item.categories_description
                                      td = item.direct_branch.present? ? item.direct_branch.name : (item.direct_branch ? item.direct_branch.name : nil)
                                      td
                                        .actions
                                          = link_item '<i class="fa fa-qrcode"></i>'.html_safe, "/item_qr/#{item.id}.pdf", title: t('helpers.show'),
                                                  class: 'btn btn-xs btn-success btn-flat'
                                          = link_item '<i class="fa fa-search"></i>'.html_safe, item_path(item), title: t('helpers.show'),
                                                  class: 'btn btn-xs btn-success btn-flat'
                                          = link_item '<i class="fa fa-edit"></i>'.html_safe, edit_item_path(item),
                                                  class: 'btn btn-xs btn-primary btn-flat', title: t('helpers.edit')

              #password.tab-pane
                .dataTables_wrapper
                  .row
                    .col-sm-12
                      .table-responsive
                        table.table.table-bordered.table-hover.dataTable
                          thead
                            tr
                              th = t('.first_name')
                              th = t('.last_name')
                              th = t('.maiden_name')
                              / th = t('.role')
                              / th = t('.report')
                              th.actions_header
                                = t('.actions')
                          tbody
                            - @employees.each do |user|
                              tr.show_actions
                                /td.table-checkbox
                                                            .checkbox.icheck
                                                              input [type="checkbox" class="icheck-me" data-skin="square" data-color="blue"]
                                /td = user.email
                                td = user.first_name
                                td = user.last_name
                                td = user.maiden_name
                                / td = user.role_name
                                / td
                                                            - if user.items.count > 0
                                                              = link_to "#{t('.articles_assign')}" ' <i class="fa fa-file-pdf-o"></i>'.html_safe,
                                                                      reports_items_user_path(nombre_reporte: 'items_user', titulo_reporte: "Lista de control de remolques vendidos de un Vendedor.", user_id: user.id, format: :pdf),
                                                                      class: 'btn btn-xs btn-success btn-flat', title: t('helpers.show')
                                                            -else
                                                              = 'SIN REMOLQUES VENDIDOS'

                                td
                                  .actions
                                    - if has_policy(Department, %w(employee_items))
                                      = link_to 'Art√≠culos <i class="fa fa-dropbox"></i>'.html_safe, departments_employee_items_path(@department, user),
                                              class: 'btn btn-xs btn-success btn-flat', title: t('.items')
                                    - if has_policy(User, %w(edit_user), 'Users::Registration')
                                      = link_to '<i class="fa fa-edit"></i>'.html_safe, edit_user_path(user),
                                              class: 'btn btn-xs btn-primary btn-flat', title: t('helpers.edit')
                                    - if has_policy(User, %w(destroy), 'Users::Registration')
                                      = link_to '<i class="fas fa-trash"></i>'.html_safe, destroy_department_employee_path(@department, user), method: :delete, title: t('helpers.destroy'),
                                              class: 'btn btn-xs btn-danger btn-flat btn-destroy',
                                              data: {:'resource' => :users, :'resource-id' => user.id,
                                                      :'resource-message' => t('questions.destroy', resource: t('.resource'),
                                                              name: user.email)}

                  .row
                    .col-sm-5
                      .dataTables_info
                        = pluralize(@employees.count, t('.one'), t('.other'))


