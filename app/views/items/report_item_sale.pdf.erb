<!doctype html>
<html>
<head>
  <meta charset='utf-8'/>
  <%= wicked_pdf_stylesheet_link_tag 'application', media: 'all' %>

  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-4">
            <%= image_tag wicked_pdf_asset_base64('logoblu.png'), alt: "Planet Agrotrailer", style: 'width: 200px; height: 100px' %>
          </div>
          <div class="col-xs-4" style="text-align: center">
            <p style="font-size: 16px">
              <strong>
                Grupo Remolques del Norte, S.A. de C.V.
              </strong>
            </p>
            <p style="font-size: 13px">
              Km. 7 Carr. Cuauhtemoc-Alvaro Obregón S/N
              <br>
              Campo 22, CUAUHTEMOC
              <br>
              Cuauhtemoc, Chihuahua CP: 31607
              <br>
              GRN030226P48
              <br>
              Tel. (625) 58 77200
              <br>
              Fax. (625) 58 77203
            </p>
            <a href="#" target="_blank">
              www.trailer.com.mx
            </a>
          </div>
          <div class="col-xs-4">
            <table class="table table-bordered table-hover dataTable">
              <thead class="table_header">
              <tr>
                <th style="text-align: center; vertical-align: middle">Fecha</th>
                <th style="text-align: center; vertical-align: middle">Folio</th>
              </tr>
              </thead>
              <tbody>
              <tr class="show_actions">
                <td style="text-align: center; vertical-align: middle">
                  <%= @today %>
                </td>
                <td style="text-align: center; vertical-align: middle">
                  98765
                </td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
</head>
<body>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header with-border">
          <div class="row">
            <div class="col-xs-6 col-md-8 col-lg-9">
              <h3>
                Trailer
              </h3>
            </div>
          </div>
        </div>

        <div class="box-body">
          <div class="row">
            <div class="col-sm-12">
              <table class="table table-bordered table-hover dataTable">
                <thead class="table_header">
                <th style="text-align: center; vertical-align: middle" colspan="2">
                  Cliente
                </th>
                </thead>
                <tbody>
                <tr class="show_actions">
                  <td>
                    Nombre: <%= @trailer.try(:client).try(:full_name) %>
                  </td>
                  <td>
                    Email: <%= @trailer.try(:client).try(:email) %>
                  </td>
                </tr>
                <tr class="show_actions">
                  <td>
                    Dirección: <%= @trailer.try(:client).try(:address) %>
                  </td>
                  <td>
                    Celular: <%= @trailer.try(:client).try(:cellphone) %>
                  </td>
                </tr>
                <tr class="show_actions">
                  <td rowspan="2">
                    C.P: <%= @trailer.try(:client).try(:postal_code) %>
                  </td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="box-body">
          <div class="row">
            <div class="col-sm-12">
              <table class="table table-bordered table-hover dataTable">
                <thead class="table_header">
                <th style="text-align: center; vertical-align: middle">
                  Orden de compra
                </th>
                <th style="text-align: center; vertical-align: middle">
                  Condiciones
                </th>
                <th style="text-align: center; vertical-align: middle">
                  Vendedor
                </th>
                <th style="text-align: center; vertical-align: middle">
                  Via de embarque
                </th>
                </thead>
                <tbody>
                <tr class="show_actions">
                  <td style="text-align: center; vertical-align: middle">
                  </td>
                  <td style="text-align: center; vertical-align: middle">
                  </td>
                  <td style="text-align: center; vertical-align: middle">
                    <%= @trailer.try(:user).try(:full_name) %>
                  </td>
                  <td style="text-align: center; vertical-align: middle">
                  </td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="box-body">
          <div class="row">
            <div class="col-sm-12">
              <table class="table table-bordered table-hover dataTable">
                <thead class="table_header">
                <tr>
                  <th style="text-align: center; vertical-align: middle">
                    Artículo
                  </th>
                  <th style="text-align: center; vertical-align: middle">
                    Nombre
                  </th>
                  <th style="text-align: center; vertical-align: middle">
                    U. med
                  </th>
                  <th style="text-align: center; vertical-align: middle">
                    Unidades
                  </th>
                  <th style="text-align: center; vertical-align: middle">
                    Precio
                  </th>
                  <th style="text-align: center; vertical-align: middle">
                    Descuento
                  </th>
                  <th style="text-align: center; vertical-align: middle">
                    Importe
                  </th>
                </tr>
                </thead>
                <tbody>
                <tr class="show_actions">
                  <td style="text-align: center; vertical-align: middle">
                    <%= @trailer.try(:model) %>
                  </td>
                  <td style=" text-align: center; vertical-align: middle">
                    <%= @trailer.try(:categories_description) %>
                  </td>
                  <td style="text-align: center; vertical-align: middle">
                    Pieza
                  </td>
                  <td style="text-align: center; vertical-align: middle">
                    1
                  </td>
                  <td style="text-align: center; vertical-align: middle">
                    <%= "%.2f" % @trailer.price if @trailer.price.present? %>
                  </td>
                  <td style="text-align: center; vertical-align: middle">

                  </td>
                  <td style="text-align: center; vertical-align: middle">
                    <%= "%.2f" % @trailer.price if @trailer.price.present? %>
                  </td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
            </div>
          </div>
        </div>
        <div class="box-body">
          <div class="row">
            <div class="col-sm-12">
              <table class="table table-bordered table-hover dataTable">
                <thead class="table_header">
                </thead>
                <tbody>
                <tr class="show_actions">
                  <td>
                    <strong>Cadena original:</strong>
                    <br>
                    <%= @trailer.try(:categories_description) %>
                  </td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="box-body">
          <div class="row">
            <div class="col-sm-12">
              <table class="table table-bordered table-hover dataTable">
                <thead class="table_header">
                </thead>
                <tbody>
                <tr class="show_actions">
                  <td >
                    (<%= @number_string.capitalize() %> pesos 00/100 m.n.)
                  </td>
                  <td>
                    Subtotal:
                  </td>
                  <td>
                    <%= @sub_total %>
                  </td>
                </tr>
                <tr class="show_actions">
                  <td rowspan="2">
                    Texto
                  </td>
                  <td>
                    Tasa:
                  </td>
                  <td>
                    <%= @tasa %>
                  </td>
                </tr>
                <tr class="show_actions">
                  <td>
                    Total:
                  </td>
                  <td>
                    <%= @trailer.price %>
                  </td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="box-body">
          <div class="row">
            <div class="col-sm-12">
              <table class="table table-bordered table-hover dataTable">
                <thead class="table_header">
                </thead>
                <tbody>
                <tr class="show_actions">
                  <td colspan="3">
                    (<%= @number_string.capitalize() %> pesos 00/100 m.n.)
                  </td>
                  <td rowspan="2">
                    Sello
                  </td>
                </tr>
                <tr class="show_actions">
                  <td colspan="3">
                    Texto
                  </td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
</body>
</html>

