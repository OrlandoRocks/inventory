section.content
  .row
    .col-xs-12
      .box.box-primary
        .box-header.with-border
          .row
            .col-xs-6.col-md-8.col-lg-8
              h3.box-title
                = 'Lista de Tipos de Suspension'
            .col-xs-6.col-md-4.col-lg-4
              .box-tools.pull-right
                = link_to new_suspension_type_path, class: 'btn btn-sm btn-flat btn-success', title: 'Nuevo Tipo de Suspension' do
                  i.fa.fa-plus
                  span.hidden-xs
                    =< 'Crear Tipo de Suspension'
        .box-body
          .dataTables_wrapper
            .row
              .col-sm-12
                .table-responsive
                  table.table.table-bordered.table-hover.dataTable
                    thead
                      tr
                        /th.table-checkbox
                          .checkbox.icheck
                            input [type="checkbox" class="icheck-me" data-skin="square" data-color="blue"]
                        / th = t('.company')
                        th = 'Tipo de Suspension'
                        th = 'Modelo'
                        th = 'Estatus'
                        th.actions_header
                          = t('helpers.actions')
                      tbody
                        - @suspension_types.each do |suspension_type|
                          tr.show_actions
                            td = suspension_type.name
                            td = suspension_type.model_part
                            td = suspension_type.status ? 'Activo' : 'InhÃ¡bil'
                            td
                              .actions
                                = link_item '<i class="fa fa-edit"></i>'.html_safe, edit_suspension_type_path(suspension_type),
                                        class: 'btn btn-xs btn-primary btn-flat', title: t('helpers.edit')
                                - if has_policy(suspension_type, %w(destroy))
                                  = link_to '<i class="fas fa-trash"></i>'.html_safe, suspension_type_path(suspension_type), method: :delete, title: t('helpers.destroy'),
                                          class: 'btn btn-xs btn-danger btn-flat btn-destroy',
                                          data: {'resource' => :categories, 'resource-id' => suspension_type.id,
                                                  'resource-message' => t('questions.destroy', resource: t('.resource'),
                                                          name: suspension_type.name)}
        .row
          .col-sm-5
            .dataTables_info
              = pluralize(@suspension_types.count, 'Tipo de Suspension', 'Tipos de Suspensiones')