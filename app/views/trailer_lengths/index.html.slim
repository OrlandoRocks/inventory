section.content
  .row
    .col-xs-12
      .box.box-primary
        .box-header.with-border
          .row
            .col-xs-6.col-md-8.col-lg-8
              h3.box-title
                = 'Lista de Largo del Remolque'
            .col-xs-6.col-md-4.col-lg-4
              .box-tools.pull-right
                = link_to new_trailer_length_path, class: 'btn btn-sm btn-flat btn-success', title: 'Nuevo Largo del Remolque' do
                  i.fa.fa-plus
                  span.hidden-xs
                    =< 'Crear Largo del Remolque'
        .box-body
          .dataTables_wrapper
            .row
              .col-sm-12
                .table-responsive
                  table.table.table-bordered.table-hover.dataTable
                    thead
                      tr
                        /th.table-checkbox
                          .checkbox.icheck
                            input [type="checkbox" class="icheck-me" data-skin="square" data-color="blue"]
                        / th = t('.company')
                        th = 'Largo del Remolque'
                        th = 'Modelo'
                        th = 'Estatus'
                        th.actions_header
                          = t('helpers.actions')
                      tbody
                        - @trailer_lengths.each do |trailer_length|
                          tr.show_actions
                            /td.table-checkbox
                              .checkbox.icheck
                                input [type="checkbox" class="icheck-me" data-skin="square" data-color="blue"]
                            / td = trailer_length.try(:company).try(:name)
                            td = trailer_length.name
                            td = trailer_length.model_part
                            td = trailer_length.status ? 'Activo' : 'InhÃ¡bil'
                            td
                              .actions
                                = link_item '<i class="fa fa-edit"></i>'.html_safe, edit_trailer_length_path(trailer_length),
                                        class: 'btn btn-xs btn-primary btn-flat', title: t('helpers.edit')
                                - if has_policy(trailer_length, %w(destroy))
                                  = link_to '<i class="fas fa-trash"></i>'.html_safe, '#', title: t('helpers.destroy'),
                                          class: 'btn btn-xs btn-danger btn-flat btn-destroy',
                                          data: {'resource' => :categories, 'resource-id' => trailer_length.id,
                                                  'resource-message' => t('questions.destroy', resource: t('.resource'),
                                                          name: trailer_length.name)}
        .row
          .col-sm-5
            .dataTables_info
              = pluralize(@trailer_lengths.count, 'Largo del Remolque', 'Largos del Remolque')