aside.main-sidebar
  section.sidebar
    /! Sidebar Menu
    ul.sidebar-menu
      - if has_policy_catalogo
        li.header MENU
      - if has_policy_catalogo
        - if has_policy(Item, %w(new index))
          li.treeview
            a href='/'
              i.fab.fa-superpowers
              span = ' Inicio'
          li
            = link_item "<i class='fa fa-list'></i> Inventario ".html_safe, items_path
          / li.treeview
            a href='#'
              i.fa.fa-list
              span = 'Inventario'
              i.fa.fa-angle-left.pull-right
