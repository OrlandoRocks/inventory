                = link_item "<i class='fas fa-angle-right'></i> Inventario Local".html_safe, items_path
        li.treeview
          a href='#'
            i.fa.fa-truck
            span Catalogo
            i.fa.fa-angle-left.pull-right
          ul.treeview-menu
            li
              = link_item "<i class='fas fa-angle-right'></i> Trailers".html_safe, trailers_path
            li
              = link_item "<i class='fas fa-angle-right'></i> Nuevo Pedido".html_safe, new_order_path
            li
              = link_item "<i class='fas fa-angle-right'></i> Pedidos".html_safe, orders_path
