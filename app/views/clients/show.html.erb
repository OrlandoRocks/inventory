                      <div class="timeline-body">
                        <%= audit.auditable_type == "ItemFile" ? t(".audit.file_mesage"): t(".audit.maintenance_mesage")  %>:
                        <br>
                      </div>

                    </div>
                  </li>
                <% else %>
                  <li class="time-label">
                    <span class="bg-red">
                      <%= audit.created_at.strftime("%d / %m / %Y") %>
